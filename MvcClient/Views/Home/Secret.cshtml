
@model IEnumerable<InspectionAPI.Data.ViewModel.StatusViewModel>

<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">List Status</h1>
    <div class="row">
        <div class="col-md-3 col-xs-12">
            <a class="btn btn-success" asp-action="Create" asp-controller="Product">Create Status</a>
        </div>

    </div>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Status Name
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StatusOption)
                                </td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                                    @Html.ActionLink("Assign", "CategoryAssign", new { id = item.Id }) |
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <button class="btn btn-success" type="button" onclick="location.href='@Url.Action("Logout", "Home")'" >Logout</button>
    </div>

